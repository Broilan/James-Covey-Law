const org = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  "name": "Law Offices of James P. Covey, P.A.",
  "url": "https://example.com", // TODO: set your real domain
  "founder": { "@type": "Person", "name": "James P. Covey, J.D., M.B.A." },
  "areaServed": ["Florida","Maryland"],
  "image": "https://example.com/og.jpg",
  "telephone": "+1-772-770-6160",
  "sameAs": [], // add Google/Avvo/etc. URLs
  "address": [{
    "@type": "PostalAddress",
